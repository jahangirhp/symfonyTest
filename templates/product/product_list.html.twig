{% extends 'base.html.twig' %}

  {% block stylesheets %}
      <link rel="stylesheet" type="text/css" href="{{ asset('styles/card.css') }}">
  {% endblock %}


{% block javascripts %}
    <script src="{{ asset('js/cart.js') }}"></script>
{% endblock %}

{% block title %}Products{% endblock %}

{% block body %}

    <!-- Navbar.twig -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Shop</a>

        <button type="button" id="cart-button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#cartModal">
            ðŸ›’ Cart <span id="cart-count">{{ app.session.get('cart') is defined ? app.session.get('cart')|length : 0 }}</span>
        </button>
    </nav>

    <form method="get" action="{{ path('app_product_list_user') }}">
        <input type="text" name="name" value="{{ filter }}" placeholder="Search by name...">
        <button type="submit">Filter</button>
    </form>

    <h2 class="h5">Available Products</h2>

    <div class="container-fluid d-flex justify-content-center">
        <div class="row mt-5">
    {% for product in products %}

            <div class="col-sm-4">
                <div class="card">
                    <img src="{{ asset('uploads/' ~ product.imgUrl) }}" class="card-img-top" width="100%">
                    <div class="card-body pt-0 px-0">
                        <hr class="mt-2 mx-3">
                        <div class="d-flex flex-row justify-content-between px-3 pb-4">
                            <div class="d-flex flex-column"><span class="text-muted">{{ product.name }}</div>
                            <div class="d-flex flex-column">{{ product.description }}</div>
                            <div class="d-flex flex-column">{{ product.price }}</div>
                        </div>
                        <div class="mx-3 mt-3 mb-2"><button onclick="addToCard({{ product.id }})" type="button" class="btn btn-success btn-block"><small>Add to Card</small></button></div>
                    </div>
                </div>
            </div>
    {% endfor %}

        </div>
    </div>


    <div class="modal fade" id="cartModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Your Cart</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div id="cart-modal-body" class="modal-body">
{#                    {% include 'product/_cart_item.html.twig' with { cart: cart } %}#}
                </div>
            </div>
        </div>
    </div>



{% endblock %}
