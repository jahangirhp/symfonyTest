{# templates/order/index.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
    <h1>Orders</h1>
    <a href="{{ path('order_new') }}" class="btn btn-primary mb-3">New Order</a>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.title }}</td>
                <td>{{ order.amount }}</td>
                <td>{{ order.marking }}</td>
                <td>
                    {% for transition in ['submit','approve','ship','deliver','cancel'] %}
                        {% if workflow_can(order, transition, 'order_workflow') %}
                            <a href="{{ path('order_transition', {id: order.id, transition: transition}) }}" class="btn btn-sm btn-info">{{ transition|capitalize }}</a>
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
