{% extends 'base.html.twig' %}
{% block javascripts %}
    <script src="{{ asset('js/currency.js') }}"></script>
{% endblock %}

{% block title %}Hello CurrencyConverterController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

        <div class="container mt-5">
            <div class="card shadow p-4 rounded">
                <h2 class="mb-4">Currency Converter</h2>
<div>
                <label for="fromCurrency">From:</label>
                <select id="fromCurrency" name="fromCurrency" class="form-select mb-3">
                    <option value="">Select currency</option>
                    {% for code, name in currencies %}
                        <option value="{{ code }}">{{ name }} ({{ code }})</option>
                    {% endfor %}
                </select>
</div>
                <div>
                <label for="toCurrency">To:</label>
                <select id="toCurrency" name="toCurrency" class="form-select mb-3">
                    <option value="">Select currency</option>
                    {% for code, name in currencies %}
                        <option value="{{ code }}">{{ name }} ({{ code }})</option>
                    {% endfor %}
                </select>
                </div>
                <div>
              <label for="amount">Amount</label>  <input id="amount" type="text">
                <button class="btn btn-primary mt-3" onclick="callConvertCurrency()" id="convertBtn">Convert</button>
                </div>
                final amount is :<label id="convertResult"></label>
            </div>
        </div>
    {% endblock %}

